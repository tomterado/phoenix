{
  "name": "Phoenix NFT",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Save and access your favorite NFT items",
  "background": {
      "scripts": ["./background.js"]
  },
  "icons": {
        "16": "./phoenix_16.png",
        "32": "./phoenix_32.png",
        "48": "./phoenix_48.png",
        "128": "./phoenix_128.png"
    },
  "options_page": "./options.html",
  "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "https://www.google.com/*",
        "https://www.zora.com/*",
        "https://www.nfitygateway.com/*",
        "storage",
        "notifications"
    ] 
}